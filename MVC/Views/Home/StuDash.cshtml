@{
    Layout = "../Shared/_StudentLayout";
}

<div id="leftPane" style="width: 100%; display: flex; width: 75vw; gap: 100px;">
    <div id="profilePanel"></div>
    <div id="chart" style="width: 100%;"></div>
</div>
<script>
    $(document).ready(function () {
        $.ajax({
            url: "http://localhost:5113/api/StudentApi/GetByStudent/4",
            type: "GET",
            success: function (response) {
                console.log("API Response:", response);

                // Initialize Kendo Chart
                $("#chart").kendoChart({
                    title: {
                        text: "Syllabus Completion Progress"
                    },
                    dataSource: {
                        data: response
                    },
                    series: [{
                        type: "bar",
                        field: "completionPercentage",
                        categoryField: "topic",
                        name: "Completion %"
                    }],
                    categoryAxis: {
                        labels: {
                            rotation: -45
                        }
                    },
                    valueAxis: {
                        max: 100,
                        title: { text: "Completion (%)" }
                    },
                    tooltip: {
                        visible: true,
                        format: "{0}%"
                    }
                });
            },
            error: function (xhr) {
                console.log("Error fetching data", xhr);
            }
        });
    });

</script>


